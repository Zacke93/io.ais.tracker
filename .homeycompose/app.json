{
  "id": "io.aisstream.bridge",
  "name": {
    "en": "AIS Bridge",
    "sv": "AIS Bridge"
  },

  "version": "4.0.9",
  "category": ["tools"],

  "icon": "/assets/icon.svg",
  "brandColor": "#000000",
  "images": {
    "small": "/assets/images/app_small.png",
    "large": "/assets/images/app_large.png",
    "xlarge": "/assets/images/app_xlarge.png"
  },

  "author": {
    "name": "Zakarias Mortensen",
    "email": "Zaka_9@hotmail.com"
  },

  "sdk": 3,
  "compatibility": ">=6.0.0",
  "startOnInstall": true,

  "drivers": [
    {
      "id": "bridge_status",
      "name": { "en": "Bridge status", "sv": "Broläge" },
      "class": "sensor",
      "capabilities": ["alarm_generic"],
      "icon": "/drivers/bridge_status/assets/icon.png",
      "images": {
        "small": "/drivers/bridge_status/assets/images/small.png",
        "large": "/drivers/bridge_status/assets/images/large.png"
      },
      "pair": [{ "id": "list_devices" }, { "id": "add_devices" }]
    }
  ],

  "api": {
    "getConnectionStatus": {
      "method": "GET",
      "path": "/getConnectionStatus"
    },
    "getSystemHealth": {
      "method": "GET",
      "path": "/getSystemHealth"
    }
  },

  "settings": [
    {
      "id": "ais_api_key",
      "type": "text",
      "title": {
        "en": "AISStream API key",
        "sv": "AISStream API-nyckel"
      },
      "hint": {
        "en": "Create one at https://aisstream.io - Format: xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx",
        "sv": "Skapa en på https://aisstream.io - Format: xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx"
      },
      "validation": "^[0-9a-f]{8}-[0-9a-f]{4}-4[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$"
    }
  ]
}
