{
  "env": {
    "jest": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "max-classes-per-file": "off",
    "max-len": "off",
    "no-process-exit": "off",
    "global-require": "off",
    "import/no-dynamic-require": "off",
    "no-mixed-operators": "off",
    "no-template-curly-in-string": "off",
    "no-unused-vars": "warn",
    "comma-dangle": "off",
    "arrow-parens": "off",
    "no-trailing-spaces": "off",
    "eol-last": "off",
    "no-multi-spaces": "off"
  },
  "overrides": [
    {
      "files": ["**/*.test.js", "**/*test*.js"],
      "rules": {
        "no-console": "off",
        "prefer-const": "off"
      }
    }
  ]
}